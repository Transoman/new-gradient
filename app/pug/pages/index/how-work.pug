section.how-work#how-work
  .container
    h2(data-aos="fade-up").section-title How it works
    .section-desc(data-aos="fade-up")
      p Which <a href="#">button</a> you need to click on?
    .how-work__content
      .how-work__img-wrap(data-aos="zoom-in")
        img(src="static/images/content/how-work.png", alt="")
        canvas(style="background-image: url(static/images/general/shape-blue.svg)", width="480", height="465")
      .how-work__steps
        .how-work__steps-item(data-aos="zoom-in", data-aos-delay="200", data-aos-anchor=".how-work__steps")
          +icon('like', 'how-work__steps-icon')
          p.how-work__steps-title Choose right <br>extract
        .how-work__steps-item(data-aos="zoom-in", data-aos-delay="400", data-aos-anchor=".how-work__steps")
          +icon('delivery', 'how-work__steps-icon how-work__steps-icon--delivery')
          p.how-work__steps-title Fast delivery
        .how-work__steps-item(data-aos="zoom-in", data-aos-delay="600", data-aos-anchor=".how-work__steps")
          +icon('drop', 'how-work__steps-icon how-work__steps-icon--drop')
          p.how-work__steps-title Enjoy

// /.how-work